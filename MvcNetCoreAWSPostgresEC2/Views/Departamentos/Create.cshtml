@model MvcNetCoreAWSPostgresEC2.Models.Departamento

@{
    ViewData["Title"] = "Crear Departamento";
}

<h1>Crear nuevo Departamento</h1>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="IdDepartamento" class="form-label"></label>
        <input asp-for="IdDepartamento" class="form-control" />
        <span asp-validation-for="IdDepartamento" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Localidad" class="form-label"></label>
        <input asp-for="Localidad" class="form-control" />
        <span asp-validation-for="Localidad" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Crear</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
