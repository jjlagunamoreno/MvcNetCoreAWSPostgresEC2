@model List<MvcNetCoreAWSPostgresEC2.Models.Departamento>

@{
    ViewData["Title"] = "Departamentos";
}

<h1>Lista de Departamentos</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear nuevo departamento</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Localidad</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dept in Model)
        {
            <tr>
                <td>@dept.IdDepartamento</td>
                <td>@dept.Nombre</td>
                <td>@dept.Localidad</td>
                <td>
                    <a asp-action="Details" asp-route-id="@dept.IdDepartamento" class="btn btn-info btn-sm">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
